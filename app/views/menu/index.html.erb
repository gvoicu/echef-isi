<div class="row">
     <div class="span12">

        <!-- Careers starts -->

        <div class="career">
           <div class="row">
              <div class="span12">

              	<% if session[:order_id] %>
              		<%= link_to 'View Order', 'order', method: :get %>

                  <% if @order.is_payed? %>
                    <br />
                    <strong>Order is closed. Please open another order</strong>

                    <br />
                    <br />
                  <% else %>
                    <% if @order.table.has_notification? %>
                      <p>Waiter called.</p>
                    <% elsif %>
                      <p id="call-waiter"><%= link_to 'Call waiter', 'order/waiter', method: :post, :remote => true %></p>
                    <% end %>
                  <% end %>
								<% end %>
				
                <div class="tabbable tabs-left">
                   <!-- Tabs -->
                  <ul class="nav nav-tabs">
                    <!-- Navigation tabs (Job titles ). Use unique value in anchor tags. -->
                    <% DishType.all.each do |dish_type|%>
                    	<li><a href="#tab<%=dish_type.id %>" data-toggle="tab"><%= dish_type.name%></a></li>
                    <% end %>
                  </ul>
                  <div class="tab-content">
	                  <% DishType.all.each do |dish_type| %>
	                   <!-- In "id", use the value which you used in above anchor tags -->
	                    <div class="tab-pane" id="tab<%=dish_type.id %>">
	                      <!-- Content -->
	                      <table>
												  <tr>
												  	<th>Name</th>
												    <th>Ingredients</th>
												    <th>Grams</th>
												    <th>Price</th>
												    <th>Time</th>
												    <th></th>
												    <th></th>
                            <th></th>
												  </tr>
												  <% Dish.where(:dish_type_id => dish_type.id).each do |dish| %>
													  <tr>
													  	<td><%= dish.name %></td>
													    <td><%= dish.ingredients %></td>
													    <td><%= dish.grams %></td>
													    <td><%= dish.price %></td>
													    <td><%= dish.time %></td>
                              <td><div class="button"><%= link_to 'Add', 'order/add/%s' % dish.id, :class => 'add-in-order', :method => :post, :remote => true %></div></td>
													  </tr>
													<% end %>
                      	</table>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
           </div>
        </div>
     </div>
  </div>

<script type="text/javascript" ">
	$(function(){
		$('.add-in-order').click(function(e){
			e.preventDefault();
		});
	});
</script>
