<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Type</th>
    <th colspan="2">Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td>
    	<%= "Administrator" if user.admin? %>
    	<%= "Chef" if user.chef? %>
    	<%= "Waiter" if user.waiter? %>
    </td>
    <td><%= link_to 'Edit', '#' %></td>
    <td><%= link_to 'Destroy', '/users/%s' % user.id , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
