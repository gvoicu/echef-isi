<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !params[:booking] %>
	  <div class="field">
	    <%= f.label :start %><br />
	    <%= f.datetime_select :start %>
		</div>
	  <div class="field">
	    <%= f.label :end %><br />
	    <%= f.datetime_select :end %>
	  </div>
	  
	  <div class="actions">
	    <%= f.submit %>
	  </div> 
	  
  <% else %>
  
	  <div class="field">
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :phone %><br />
	    <%= f.text_field :phone %>
	  </div>
	  <div class="field">
	    <%= f.label :confirmed %><br />
	    <%= f.check_box :confirmed %>
	  </div>
	  <div class="field">
	    <%= f.label :table %><br />
	    <%= f.select :table,  :collection => Table.where('number NOT IN (COALESCE(?, 0))', Booking.where('start < ? AND bookings.end > ?', @booking.end, @booking.start).collect{|t| [t.tables.number]}).collect{|t| [t.number] } %>
	  </div>
	  
	  <div class="actions">
	    <%= f.submit %>
	  </div> 
	<% end %>
<% end %>
